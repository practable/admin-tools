---
- name: configure kernel
  hosts: ${ANSIBLE_GROUP}
  become: yes
  gather_facts: no
  vars_files:
    - ../autogenerated/vars.yml
    
  tasks:
    
   - name: copy systcl.d file
     copy: src=../autogenerated/tcp-mem.conf dest=/etc/sysctl.d/tcp-mem.conf       

   - name: update kernel configuration
     ansible.builtin.command: sysctl -p /etc/sysctl.d/tcp-mem.conf

