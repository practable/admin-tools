---
- name: pre-install setup
  hosts: ${ANSIBLE_GROUP}
  become: yes
  gather_facts: no
  vars_files:
    - ../autogenerated/vars.yml
    
  tasks:
    - name: ensures /etc/practable dir exists
      file:
        path: "/etc/practable"
        state: directory

    - name: copy 
      copy: 
        src: ${PRIVATE_KEY} 
        dest: /etc/practable/github.key       
        mode: '0600'


 
