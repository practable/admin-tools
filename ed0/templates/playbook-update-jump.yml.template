---
- name: install jump
  hosts: ${ANSIBLE_GROUP}
  become: yes
  gather_facts: no
  vars_files:
    - ../autogenerated/vars.yml
    
  tasks:
    
   - name: get service facts
     service_facts:

   - name: stop jump if installed
     service:
       name: jump
       state: stopped
     when: ansible_facts.services["jump.service"] is defined

   - git:
       repo: git@github.com:practable/jump.git
       dest: /var/lib/practable/sources/jump
       update: yes
       version: main
       accept_hostkey: yes
       key_file: /etc/practable/github.key       
       
   - name: jump build
     command: ./build.sh
     args:
       chdir: /var/lib/practable/sources/jump/scripts/build

   - name: jump install
     command: cp jump /usr/local/bin/jump
     args:
       chdir: /var/lib/practable/sources/jump/cmd/jump

   - name: copy jump service file 
     copy: src=../autogenerated/jump.service dest=/etc/systemd/system/jump.service       

   - name: start jump
     service:
       name: jump
       state: started
       enabled: true
       
   - name: get service facts
     service_facts:
        
   - name: check jump service installed
     fail:
       msg: "jump service is not installed"
     when: ansible_facts.services["jump.service"] is not defined
     
  handlers:
        
    - name: reload nginx
      ansible.builtin.service:
        name: nginx
        state: reloaded
