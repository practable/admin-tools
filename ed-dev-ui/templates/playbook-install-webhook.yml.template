---
- name: install webhook
  hosts: ${ANSIBLE_GROUP}
  become: yes
  gather_facts: no

  tasks:

    - name: Install webhook
      apt: name=webhook state=latest

    - name: Create a directory for webhook configuration file and scripts
      ansible.builtin.file:
        path: "/var/webhook"
        state: directory
        mode: '0755'

    - name: Copy webhook configuration file
      template:
        src: ../autogenerated/hooks.yml
        dest: /var/webhook/hooks.yml

    - name: Copy webhook service file
      template:
        src: ../autogenerated/webhook.service
        dest: /etc/systemd/system/webhook.service

    - name: Copy webhook script git-pull-david
      template:
        src: ../autogenerated/git-pull-david.sh
        dest: /var/webhook/git-pull-david.sh
        mode: a+x

    - name: Copy webhook script git-pull-sijie
      template:
        src: ../autogenerated/git-pull-sijie.sh
        dest: /var/webhook/git-pull-sijie.sh
        mode: a+x

    - name: Copy webhook script git-pull-alonso
      template:
        src: ../autogenerated/git-pull-alonso.sh
        dest: /var/webhook/git-pull-alonso.sh
        mode: a+x

    - name: start webhook
      service:
        name: webhook
        state: started
        enabled: yes

    - name: get service facts
      service_facts:

    - name: check webhook installed
      fail:
        msg: "webhook is not installed"
      when: ansible_facts.services["webhook.service"] is not defined